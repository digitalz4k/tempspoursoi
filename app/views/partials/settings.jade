.settings-container
    .text-center
        h2 Dashboard
        span Gérer les paramètres administrateurs
    
    .row
          
        section.large-12.columns
            h5 Paramètres du site

            .form-group
                label Titre du site
                textarea(ng-model="seo.pageTitle")

            .form-group
                label Description du site
                textarea(ng-model="seo.pageDescription")

            .form-group
                label Auteur
                input(ng-model="seo.siteAuthor")


        section.large-12.columns
            h5 Paramètres du compte
                    
            form.form(name='form', ng-submit='changePassword(form)', novalidate='')

                .form-group
                    label Mot de passe actuel
                    input.form-control(type='password', name='password', ng-model='user.oldPassword', mongoose-error='')
                    p.help-block(ng-show='form.password.$error.mongoose')
                        | {{ errors.other }}

                .form-group
                  label Nouveau mot de passe
                  input.form-control(type='password', name='newPassword', ng-model='user.newPassword', ng-minlength='3', required='')
                  p.help-block(ng-show='(form.newPassword.$error.minlength || form.newPassword.$error.required) && (form.newPassword.$dirty || submitted)')
                    | Password must be at least 3 characters.

                p.help-block  {{ message }}

                p.text-center
                    button.small.secondary(type='submit') Sauvegarder les paramètres
